html(lang='en')
  head
    meta(charset='utf-8')
    meta(content='width=device-width, initial-scale=1.0', name='viewport')
    title Procure | Karibu Grocery Limited
    meta(content='', name='description')
    meta(content='', name='keywords')
    // Favicon
    link(href='/images/favicon-32x32.png', rel='icon')
    // Google Fonts

    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i', rel='stylesheet')
    
    // Vendor CSS Files
    link(href='/animate.css/animate.min.css', rel='stylesheet')
    link(href='/aos/aos.css', rel='stylesheet')
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/bootstrap-icons/bootstrap-icons.css', rel='stylesheet')
    link(href='/boxicons/css/boxicons.min.css', rel='stylesheet')
    link(href='/glightbox/css/glightbox.min.css', rel='stylesheet')
    link(href='/remixicon/remixicon.css', rel='stylesheet')
    link(href='/swiper/swiper-bundle.min.css', rel='stylesheet')

    // Main CSS File
    link(href='/css/login.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
  body

    // ======= Header =======
    header#header.fixed-top.d-flex.align-items-center
      .container.d-flex.align-items-center.justify-content-between
        .logo
          a(href='index.html')
            img(src='/images/logo.png')

          
        h2.companyname
          | Karibu Grocery Limited
          strong  | Procurement Portal 
        nav#navbar.navbar
          ul
            li
              a.nav-link.scrollto(href='/index.html') Home
            li
              a.nav-link.scrollto(href='/procurement.html') Procure
            li
              a.nav-link.scrollto(href='/sell.html') Sell
            li
              a.nav-link.scrollto(href='/credit.html') Credit
            li
              a.nav-link.scrollto(href='/credit.html') Logout
            i.bi.bi-list.mobile-nav-toggle
        // .navbar
    // End Header
    main#main
      // ======= Breadcrumbs =======
      section#breadcrumbs.breadcrumbs
        .container
          .d-flex.justify-content-between.align-items-center
            // <h2 class="companyname"> Karibu Grocery Limited<strong> | Business Portal </strong></h2>
            h4 Produce Procurement
      // End Breadcrumbs
      .container
        .col-lg-8         
          form(action='/login' method='POST')
            .row 
              .col 
                h3.loginheader Enter produce details below and click save
            .row              
              .col-lg-6
                input(type='text', name='producename', placeholder='Produce name')
                span.error
              .col-lg-6
                select
                  option(value='select', name='role' placeholder='Select role' required) Select Produce type
                  option(value='agent', name='role') Cereal 
                  option(value='manager', name='role') Grains
            .row 
              .col.lg-6 
                input(type='date', name='datetime', placeholder='Date & time')
              .col-lg-6 
                input(type='text', name='tonnage', placeholder='Tonnage in KGS')
            .row
              .col-lg-6 
                input(type='text', name='cost', placeholder='Buying Price')
              .col-lg-6
                input(type='text', name='dealearname', placeholder='Dealers Name')
            .row              
              .col-lg-6
                 select
                  option(value='select', name='role' placeholder='Select role') Select Branch
                  option(value='branch', name='branch') Matuga 
                  option(value='branch', name='branch') Maganjo
              .col-lg-6
                input(type='text', name='contact', placeholder='Phone')
            .row
              .col-lg-6
                input(type='text', name='sellingprice', placeholder='Selling price')
              .col-lg-6
                button SAVE

    footer#footer
      .container
        h3(style='color:#80C41C') Karibu Grocery Limited
        .copyright
          | &copy; Copyright 
          strong
            span Karibu Grocery Limited
          | . All Rights Reserved. Designed by 
          a(href='#') Fredrick Okori
    // End Footer
    
    a.back-to-top.d-flex.align-items-center.justify-content-center(href='#')
      i.bi.bi-arrow-up-short
      // ======= Footer =======
      a.back-to-top.d-flex.align-items-center.justify-content-center(href='#')
        i.bi.bi-arrow-up-short
      // Vendor JS Files
      script(src='/aos/aos.js')
      script(src='/bootstrap/js/bootstrap.bundle.min.js')
      script(src='/glightbox/js/glightbox.min.js')
      script(src='/isotope-layout/isotope.pkgd.min.js')
      script(src='/swiper/swiper-bundle.min.js')
      script(src='/php-email-form/validate.js')

      // Template Main JS File
      script(src='/js/main.js')